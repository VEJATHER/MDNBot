{
  "name": "belugas-bot",
  "version": "1.0.0",
  "description": "MDN search bot",
  "main": "index.js",
  "scripts": {
    "transpile": "babel --presets es2015 src --out-dir bin",
    "deploy": "npm run transpile && claudia create --region eu-west-2 --use-local-dependencies --api-module bin/bot",
    "update": "npm run transpile && claudia update --use-local-dependencies --api-module bin/bot",
    "configure-facebook": "npm run transpile && claudia update --configure-fb-bot",
    "configure-skype": "npm run transpile && claudia update --configure-skype-bot",
    "configure-telegram": "npm run transpile && claudia update --configure-telegram-bot",
    "configure-slack": "npm run claudia update --use-local-dependencies  --configure-slack-slash-app",
    "start": "ntl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VEJATHER/MDNBot.git"
  },
  "keywords": [
    "mdn",
    "bot",
    "slackbot"
  ],
  "author": "VEJATHER",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VEJATHER/MDNBot/issues"
  },
  "homepage": "https://github.com/VEJATHER/MDNBot#readme",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "claudia": "^2.9.0",
    "claudia-bot-builder": "^2.14.1",
    "ntl": "^1.2.0"
  },
  "dependencies": {
    "request": "^2.80.0",
    "request-promise": "^4.1.1"
  }
}
