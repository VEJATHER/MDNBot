{
  "name": "belugas-bot",
  "version": "1.0.0",
  "description": "MDN search bot",
  "main": "index.js",
  "scripts": {
    "test": "claudia test-lambda --event event.json",
    "create": "claudia create --region eu-west-2 --handler index.handler",
    "deploy": "claudia create --region eu-west-2 --use-local-dependencies --api-module bot",
    "update": "claudia update --use-local-dependencies",
    "configure-facebook": "claudia update --configure-fb-bot",
    "configure-skype": "claudia update --configure-skype-bot",
    "configure-telegram": "claudia update --configure-telegram-bot",
    "configure-slack": "claudia update --use-local-dependencies  --configure-slack-slash-app",
    "start": "ntl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VEJATHER/belugas-bot.git"
  },
  "keywords": [
    "mdn",
    "bot",
    "slackbot"
  ],
  "author": "VEJATHER",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VEJATHER/belugas-bot/issues"
  },
  "homepage": "https://github.com/VEJATHER/belugas-bot#readme",
  "devDependencies": {
    "claudia": "^2.9.0",
    "claudia-bot-builder": "^2.14.1",
    "ntl": "^1.2.0"
  }
}
